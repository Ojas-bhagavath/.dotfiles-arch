#!/bin/bash

direction=$1
if test "$direction" = "down"
then
	amixer -q set 'Master' 1%-
elif test "$direction" = "up"
then
	amixer -q set 'Master' 1%+
fi

stat=$(volumectl | awk '{print $3}')
stat="${stat:1:-1}"
cur=$(volumectl | awk '{print $2}')
per="${cur::-1}"

icon() {

[ $stat = off ] && echo "󰖁" && exit

if [ "$per" -gt "66" ]; then
	icon="󰕾"
elif [ "$per" -gt "33" ]; then
	icon="󰖀"
elif [ "$per" -gt "0" ]; then
	icon="󰕿"
elif [ "$per" = "0" ]; then
	icon="󰖁"
fi

echo "$icon"

}

percent() {
echo $per
}


[ "$1" = "icon" ] && icon && exit
[ "$1" = "percent" ] && percent && exit
exit

